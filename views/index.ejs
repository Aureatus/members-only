<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <% if (locals.currentUser) { %>
    <div>
      <span><a href="/logout">Logout</a></span>
    </div>
    <a href="/create-message">Create new message!</a>
    <% messages.forEach((message) => { %>
    <div>
      <hr />
      <h2><%= message.title %></h2>
      <p><%= message.body %></p>
      <% if (Object.keys(message.user).length > 1) { %>
      <p>
        <%= `Author: ${message.user.given_name} ${message.user.family_name}` %>
      </p>
      <p><sub><%= message.timestamp %></sub></p>
      <% if (message.user.admin === true) { %>
       <a href=<%= `${message._id}/delete`%>>Delete</a>
      <% } %>
      <% } %>
    </div>
    <% }); %> <% } else{ %>
    <span><a href="/login">Login</a></span>
    <span><a href="/sign-up">Sign up</a></span>
    <h1>Sign in to create messages</h1>
    <% } %>
  </body>
</html>
